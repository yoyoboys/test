<UserControl x:Class="MaheshwariApp_Inventory.AD_TypeOfMaterial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             x:Name="materialType"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Background="LightGoldenrodYellow">
        <Label Height="50" Margin="325,0,-53,0" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontSize="26" FontWeight="SemiBold" Content="MATERIAL TYPE" FontFamily="Lucida Fax"></Label>
        <DockPanel HorizontalAlignment="Left" Height="545" LastChildFill="False" Margin="12,43,0,0" VerticalAlignment="Top" Width="876">
            <!--<StackPanel Height="317" VerticalAlignment="Top" Width="100">
                <Button Content="Save" Height="30" Margin="0,5"/>
                <Button Content="Update" Height="30" Margin="0,5"/>
                <Button Content="Delete" Height="30" Margin="0,5"/>
                <Button Content="Cancel" Height="30" Margin="0,5"/>
                <Button Content="Exit" Height="30" Margin="0,5"/>
            </StackPanel>-->
        </DockPanel>
        <WrapPanel Margin="24,65,25,24" Width="800" >
            <Label Content="Material ID" Height="30" Width="130" FontFamily="Lucida Fax" FontSize="12" Margin="5"/>
            <TextBox Height="30" TextWrapping="Wrap" Width="250" Margin="4" FontSize="12" FontFamily="Lucida Fax" Name="txtMatId" />
            <Label Content="Date" Height="30" Width="130" FontFamily="Lucida Fax" FontSize="12" Margin="5" />
            <TextBox Height="30" TextWrapping="Wrap" Width="250" Margin="4" FontSize="12" FontFamily="Lucida Fax" Name="txtMatAddDate" />
            <Label Content="Material Name" Height="30" Width="130" FontFamily="Lucida Fax" FontSize="12" Margin="5" />
            <TextBox Height="30" TextWrapping="Wrap" Width="250" Margin="4" FontSize="12" FontFamily="Lucida Fax" Name="txtMatName" />
            <Label Content="Shortform" Height="30" Width="130" FontFamily="Lucida Fax" FontSize="12"  Margin="5"/>
            <TextBox Height="30" TextWrapping="Wrap" Width="250" Margin="2" FontSize="12" FontFamily="Lucida Fax" Name="txtMatShortForm" />
            <Label Content="Material Descrip." Height="30" Width="130" FontFamily="Lucida Fax" FontSize="12" Margin="5" />
            <TextBox Height="58" TextWrapping="Wrap" Width="628" Margin="4" FontSize="12" FontFamily="Lucida Fax" Name="txtMatDescription" />

            <!--<Label Content="" FontFamily="Lucida Fax" FontSize="14" Height="30" Width="130" Visibility="Hidden" Margin="2"/>-->

            <!--<TextBox Height="30" TextWrapping="Wrap" Width="250" Visibility="Hidden" Margin="2" FontSize="12" FontFamily="Lucida Fax" />-->
            <Button Content="ADD" Height="23" Name="btnAdd" Width="75" Margin="20"/>
            <Button Content="UPDATE" Height="23" Name="btnUpdate" Width="75" Margin="20" />
            <Button Content="DELETE" Height="23" Name="btnDelete" Width="75" Margin="20"/>
            <Button Content="CLEAR" Height="23" Name="btnClear" Width="75" Margin="20"/>
            <Label Content="" FontFamily="Lucida Fax" FontSize="14" Height="30" Width="130" Visibility="Hidden" Margin="2"/>

            <!--<TextBox Height="30" TextWrapping="Wrap" Width="250" Visibility="Hidden" Margin="2" FontSize="12" FontFamily="Lucida Fax" />-->

            <DataGrid AutoGenerateColumns="False" Height="200" Name="dgMaterailType" Width="752" Margin="20" />
        </WrapPanel>
    </Grid>
</UserControl>